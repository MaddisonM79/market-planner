{
  "name": "market-manager-saas",
  "version": "1.0.0",
  "description": "Market Manager SaaS Platform",
  "scripts": {
    "docker:dev:up": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:up:detached": "docker-compose -f docker-compose.dev.yml up --build -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:dev:clean": "docker-compose -f docker-compose.dev.yml down -v --remove-orphans",
    "docker:dev:tools": "docker-compose -f docker-compose.dev.yml --profile tools up -d pgadmin redis-commander",
    "docker:dev:migrate": "docker-compose -f docker-compose.dev.yml --profile migrate up migrate",
    "docker:dev:seed": "docker-compose -f docker-compose.dev.yml --profile seed up seed",
    "docker:dev:rebuild": "docker-compose -f docker-compose.dev.yml build --no-cache",
    "docker:dev:rebuild:backend": "docker-compose -f docker-compose.dev.yml build --no-cache api worker",
    "docker:dev:rebuild:frontend": "docker-compose -f docker-compose.dev.yml build --no-cache frontend",
    "docker:dev:restart": "npm run docker:dev:down && npm run docker:dev:up",
    "docker:dev:restart:backend": "docker-compose -f docker-compose.dev.yml restart api worker",
    "docker:dev:restart:frontend": "docker-compose -f docker-compose.dev.yml restart frontend",
    "docker:prod:up": "docker-compose -f docker-compose.prod.yml up --build -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "docker:prod:clean": "docker-compose -f docker-compose.prod.yml down -v --remove-orphans",
    "docker:prod:migrate": "docker-compose -f docker-compose.prod.yml --profile migrate up migrate",
    "docker:prod:seed": "docker-compose -f docker-compose.prod.yml --profile seed up seed",
    "docker:prod:rebuild": "docker-compose -f docker-compose.prod.yml build --no-cache",
    "docker:prod:rebuild:backend": "docker-compose -f docker-compose.prod.yml build --no-cache api worker",
    "docker:prod:rebuild:frontend": "docker-compose -f docker-compose.prod.yml build --no-cache frontend",
    "docker:prod:restart": "npm run docker:prod:down && npm run docker:prod:up",
    "docker:prod:restart:backend": "docker-compose -f docker-compose.prod.yml restart api worker",
    "docker:prod:restart:frontend": "docker-compose -f docker-compose.prod.yml restart frontend",
    "docker:build:dev": "docker-compose -f docker-compose.dev.yml build",
    "docker:build:prod": "docker-compose -f docker-compose.prod.yml build"
  },
  "keywords": ["market", "manager", "saas", "inventory", "management"],
  "dependencies": {},
  "devDependencies": {}
}
