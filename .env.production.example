# =============================================================================
# Production Environment Variables
# =============================================================================
# Copy this file to .env.production and fill in your REAL production values
# NEVER commit this file with actual secrets!

# Database Configuration (Production)
DATABASE_URL="postgresql://your_user:your_secure_password@pgbouncer:6432/market_manager_prod"
POSTGRES_DB=market_manager_prod
POSTGRES_USER=your_production_user
POSTGRES_PASSWORD=your_very_secure_database_password_here

# Redis Configuration (Production)
REDIS_URL="redis://:your_redis_password@redis:6379"
REDIS_PASSWORD=your_very_secure_redis_password_here


# JWT Configuration (Production)
JWT_SECRET=your_ultra_secure_jwt_secret_key_at_least_32_characters_long

# API Configuration
API_PORT=3001
NODE_ENV=production

# Logging (Production)
LOG_LEVEL=info

# Feature Flags (Production)
ENABLE_CORS=false
ENABLE_SWAGGER=false
ENABLE_DEBUG=false

# File Storage (DigitalOcean Spaces)
DO_SPACES_KEY=your_digitalocean_spaces_access_key
DO_SPACES_SECRET=your_digitalocean_spaces_secret_key
DO_SPACES_BUCKET=market-manager-prod-uploads
DO_SPACES_REGION=nyc3
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com

# Stripe (Production)
STRIPE_SECRET_KEY=sk_live_your_live_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# Email Service (Production)
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USER=postmaster@mg.yourdomain.com
SMTP_PASS=your_mailgun_smtp_password
EMAIL_FROM=noreply@yourdomain.com

# Domain Configuration
DOMAIN=yourdomain.com
API_URL=https://api.yourdomain.com
FRONTEND_URL=https://yourdomain.com

# Frontend Environment Variables
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring & Analytics (Production)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password

# BetterStack Logging (Production)
BETTERSTACK_TOKEN=your_production_betterstack_source_token
NEXT_PUBLIC_BETTERSTACK_TOKEN=your_production_betterstack_source_token

# Rate Limiting (Production)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Background Jobs (Production)
WORKER_CONCURRENCY=10
ENABLE_CRON_JOBS=true

# Security Headers
HELMET_ENABLED=true
CORS_ORIGIN=https://yourdomain.com

# Database Backup Configuration
BACKUP_S3_BUCKET=market-manager-backups
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_for_backups
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_for_backups
BACKUP_RETENTION_DAYS=30

# Performance Tuning
MAX_CONNECTIONS=100
CONNECTION_POOL_SIZE=30
CONNECTION_TIMEOUT=30000

# Health Check Configuration
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_TIMEOUT=5000

# Application Limits
MAX_UPLOAD_SIZE=50MB
MAX_REQUEST_SIZE=100MB
SESSION_TIMEOUT=3600000  # 1 hour

# Feature Limits (Production)
MAX_PRODUCTS_PER_TENANT=10000
MAX_MATERIALS_PER_TENANT=50000
MAX_USERS_PER_TENANT=100

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_URI=https://your-csp-report-collector.com/report

# Additional Security
SECURE_COOKIES=true
SAME_SITE_COOKIES=strict
TRUSTED_PROXIES=nginx
