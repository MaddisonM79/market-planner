# =============================================================================
# Development Environment Variables
# =============================================================================
# Copy this file to .env.development and fill in your values

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:6432/market_manager_dev"
POSTGRES_DB=market_manager_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=

# Frontend Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:3001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# API Configuration
API_PORT=3001
NODE_ENV=development

# Logging
LOG_LEVEL=debug

# Feature Flags
ENABLE_CORS=true
ENABLE_SWAGGER=true
ENABLE_DEBUG=true

# File Storage (Development - Local)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# External Services (Development/Testing)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Service (Development)
SMTP_HOST=localhost
SMTP_PORT=1025  # Mailhog for development
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=dev@marketmanager.local

# Monitoring & Analytics (Optional in dev)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# BetterStack Logging (Get tokens from: https://betterstack.com/logs)
  BETTERSTACK_API_TOKEN=
  BETTERSTACK_WORKER_TOKEN=
  BETTERSTACK_FRONTEND_TOKEN=
  
  BETTERSTACK_API_INGESTION_URL=
  BETTERSTACK_WORKER_INGESTION_URL=
  BETTERSTACK_FRONTEND_INGESTION_URL=

# Development Tools
ENABLE_PRISMA_STUDIO=true
ENABLE_REDIS_COMMANDER=true
ENABLE_PGADMIN=true

# Rate Limiting (Relaxed for development)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=1000

# Background Jobs
WORKER_CONCURRENCY=5
ENABLE_CRON_JOBS=true

# Development-specific Features
HOT_RELOAD=true
AUTO_MIGRATIONS=true
DETAILED_ERRORS=true
